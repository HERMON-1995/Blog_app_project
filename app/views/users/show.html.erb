<div class="user-detail">
    <div class="detail-description" style="display: flex;">
    <div><img src="<%= @user.photo %>" alt="User" style="width: 200px; height: 200px; margin-top: 10px;"/></div>
    <div class="user-desc" style="margin-left: 50px;">
        <h1> <%= @user.name %></h1>
        <h3>Number of posts: <%= @user.posts.count %></h3>
    </div>
    </div>
    <div class="bio">
        <h2>Bio</h2>
        <p><%= @user.bio %></p>
    </div>
    <div class="recent-posts">
        <% @user.three_recent_posts.each do |post| %>
        <div class="single-post">
            <h2><%= post.title %></h2>
            <a href="<%= @user.id%>/posts/<%= post.id%>">
            <p><%= post.text %></p>
             <div class="comment-like">
                    <span class="comments">Comments: <%= post.comment_counter%>, </span>
                    <span class="likes">Likes:<%= post.likes_counter%></span>
                </div>
            </a>
        </div>
        <%end%> 
         <a href="<%=@user.id%>/posts/" class="button" style="margin-left: 30rem;">See all posts</a>
    </div>
</div>